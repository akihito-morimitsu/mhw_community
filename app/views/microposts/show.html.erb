<p id="notice"><%= notice %></p>

<p>
    <%= image_tag @user.icon %>
</p>

<p>
  <strong>ユーザー:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>タイトル:</strong>
  <%= @micropost.theme %>
</p>

<p>
  <strong>本文:</strong>
  <%= @micropost.tweet %>
</p>

<p>
  <strong>カテゴリー:</strong>
  <%= @micropost.category %>
</p>

<p>
  <% @comment.each do |comment| %>
  　<p>
     <%= image_tag User.find(comment.user_id).icon %>
     <%= User.find(comment.user_id).name %>
    </p>
    <p>
      <td><%= comment.body %></td>
    </p>
  <% end %>
</p>

<h2>Add a comment:</h2>
<%= form_for ([@micropost, @micropost.comments.build]) do |f| %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
    <%= f.hidden_field :micropost_id %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

    
<%= link_to 'Back', root_path %>