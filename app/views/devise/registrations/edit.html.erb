<h1>プロフィール設定</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      
      <%= form_for(@user) do |f|%>
        <%= render 'devise/shared/error_messages', object: f.object %>
        
        <div class="field">
          <%= f.label :名前, class: "control-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :ハンターランク, class: "control-label" %>
          <%= f.text_field :rank, class: "form-control" %>
        </div>
        
        <div class="field">
          <%= f.label :オンラインコード, class: "control-label" %>
          <%= f.text_field :code, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :自己紹介 %>
          <%= f.text_area :introduction, placeholder: "活動時間帯や好きな武器など", :size => "20x6" %>
        </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-3 col-md-offset-3">
        <div class="edit_submit">
          <%= f.submit "更新する", class: "btn btn-lg btn-primary" %>
        </div>
    </div>
  </div>
  <% end %>
<% end %>