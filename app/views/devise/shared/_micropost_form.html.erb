<%= form_for(@micropost) do |f| %>
  <%= render 'devise/shared/error_messages', object: f.object %>
  <div class="form-group">
   <%= f.label :タイトル %>
   <%= f.text_field :theme %>
  </div>
   
  <div class="form-group">
   <%= f.label :本文 %>
   <%= f.text_area :comment, placeholder: "コメントを書き込んでください" %>
  </div>
  
  <div class="form-group">
   <%= f.label :カテゴリー %>
　 <%= f.collection_select(:category, Category.all, :name, :name, :prompt => "選択してください") %>
　</div>

  <%= f.submit "投稿する", class: "btn btn-lg btn-primary" %>
<% end %>