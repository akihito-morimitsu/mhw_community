<%= form_for(@micropost) do |f| %>
  <%= render 'devise/shared/error_messages', object: f.object %>
  <div class="form-group">
   <%= f.label :サークル名 %>
   <%= f.text_field :circle %>
  </div>

  <div class="form-group">
   <%= f.label :本文 %>
   <%= f.text_area :comment2, placeholder: "コメントを書き込んでください" %>
  </div>
  
  <div class="form-group">
   <%= f.label :活動時間帯 %>
　 <%= f.collection_select(:timezone, Timezone.all, :name, :name, :prompt => "選択してください", multiple: true) %>
　</div>
  
  <div class="form-group">
   <%= f.label :サークル受付状態 %>
　 <%= f.collection_select(:receptionist, Receptionist.all, :name, :name, :prompt => "選択してください") %>
　</div>
　


  <%= f.submit "作成する", class: "btn btn-lg btn-primary" %>
<% end %>