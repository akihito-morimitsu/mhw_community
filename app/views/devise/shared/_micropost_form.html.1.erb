<%= form_for(@micropost) do |f| %>
  <%= render 'devise/shared/error_messages', object: f.object %>
  <div class="form-group">
   <label for="circle">サークル名</label>
   <input type="text" class="form-control" id="circle">
  </div>

  <div class="form-group">
   <%= f.text_area :content, placeholder: "Compose new micropost..." %><br>
   <label for="comment1">コメント</label>
   <textarea class="form-control" rows="4" id="comment1"></textarea>
  </div>
  
  <div class="form-group">
  <%= f.select :name, [["Railsの基礎", "rails_base"], ["Rubyの基礎", "ruby_base"]] %>
# <select id="page_name" name="page[name]"><option value="rails_base">Railsの基礎</option> 
# <option value="ruby_base">Rubyの基礎</option></select>
</div>

  <div class="form-group">
   <label for="timez">活動時間帯</label>
   <select multiple class="form-control" id="timez">
    <option value="open">未選択</option> 
    <option>朝　(5 ～ 11)</option>
    <option>昼　(11 ～ 16)</option> 
    <option>夕　(16 ～ 19)</option>
    <option>夜　(19 ～ 24)</option>
    <option>夜　(24 ～ 5)</option>
   </select>
  </div>
  
    <div class="form-group">
   <label for="condition">サークル受付状態</label>
   <select class="form-control" id="condition">
    <option value="open">未選択</option> 
    <option>受付中</option>
    <option>停止中</option> 
   </select>
  </div>

  <%= f.submit "Post", class: "btn btn-lg btn-primary" %>
<% end %>