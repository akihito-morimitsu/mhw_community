<% provide(:title, 'Contact Form') %>
<h1>お問い合わせ</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>
      <%= render 'devise/shared/error_messages', object: f.object %>

      <%= f.label "氏名" %>
      <%= f.text_field :name %>
      
      <%= f.label "年齢" %>
      <%= f.text_field :age %>

      <%= f.label "メールアドレス" %>
      <%= f.text_field :email %>
      
      <%= f.label "問い合わせ内容" %>
      <%= f.text_area :content %>

      <%= f.submit "送信", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>